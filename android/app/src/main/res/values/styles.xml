<?xml version="1.0" encoding="utf-8"?>
<resources>

    <string name="app_name">MyStoreDay</string>

    <!-- Tema usado SOMENTE no splash / inicialização -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Fundo do splash -->
        <item name="android:windowBackground">@drawable/launch_background</item>

        <!-- Evita forçar dark mode automaticamente -->
        <item name="android:forceDarkAllowed">false</item>

        <!-- Mantém layout normal -->
        <item name="android:windowFullscreen">false</item>

        <!-- Permite desenhar system bars corretamente -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Suporte a notch -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <!-- Tema usado DEPOIS que o Flutter inicia -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

</resources>
